{
  "name": "fitness-tracker-fullstack",
  "version": "2.0.0",
  "description": "Full stack fitness tracking application",
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && node index.js",
    "dev:frontend": "cd frontend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "vercel-build": "npm run build:frontend",
    "start": "cd backend && node index.js"
  },
  "engines": {
    "node": ">=18.x"
  }
}
